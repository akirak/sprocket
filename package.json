{
  "name": "sprocket-js",
  "version": "0.1.3",
  "license": "MIT",
  "source": "client/src/sprocket.ts",
  "main": "client/dist/sprocket.js",
  "types": "client/dist/types.d.ts",
  "targets": {
    "main": false,
    "client": {
      "distDir": "client/dist",
      "sourceMap": false
    },
    "docs": {
      "distDir": "priv/static",
      "sourceMap": false
    },
    "standalone_counter": {
      "distDir": "priv/static",
      "sourceMap": false
    }
  },
  "devDependencies": {
    "@parcel/packager-ts": "2.9.2",
    "@parcel/transformer-typescript-types": "2.9.2",
    "@tailwindcss/typography": "^0.5.9",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.4.1",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^8.0.1",
    "jest": "^29.5.0",
    "parcel": "^2.9.2",
    "process": "^0.11.10",
    "tailwindcss": "^3.3.1",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3"
  },
  "scripts": {
    "client:build": "parcel build client/src/sprocket.ts --target client",
    "client:test": "jest",
    "docs:build": "parcel build client/src/docs/app.ts --target docs",
    "docs:watch": "parcel client/src/sprocket.ts client/src/docs/app.ts client/src/docs/standalone_counter.ts --no-hmr --dist-dir priv/static",
    "standalone_counter:build": "parcel build client/src/docs/standalone_counter.ts --target standalone_counter",
    "tailwind:build": "npx tailwindcss -i ./app.css -o priv/static/app.css",
    "tailwind:watch": "npx tailwindcss -i ./app.css -o priv/static/app.css --watch",
    "clean": "rm -rf build dist .parcel-cache priv/static/**",
    "watch": "gleam build && concurrently --kill-others \"gleam run -m docs\" \"yarn run docs:watch\" \"yarn run tailwind:watch\"",
    "test": "gleam test && yarn run client:test",
    "build": "gleam build && yarn run client:build && yarn run docs:build && yarn run tailwind:build"
  },
  "dependencies": {
    "morphdom": "^2.7.0",
    "topbar": "^2.0.1"
  }
}